<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Requests\Infrastructure\Persistence\Doctrine\Proxy\RequestProxy" table="requests">
        <id name="id" length="36" />
        <field name="userId" length="36" />
        <field name="status" type="integer" />
        <!--TODO add microseconds -->
        <field name="changeDate" type="datetimetz" length="6" />
        <many-to-one field="manager" target-entity="App\Requests\Infrastructure\Persistence\Doctrine\Proxy\RequestManagerProxy" inversed-by="requests" />
        <indexes>
            <index columns="user_id" />
            <index columns="manager_id" />
        </indexes>
    </entity>
</doctrine-mapping>