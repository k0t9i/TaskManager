<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\TaskManagers\Domain\Entity\Task" table="tasks">
        <id name="id" type="taskId" length="36" />
        <embedded name="name" class="App\TaskManagers\Domain\ValueObject\TaskName" use-column-prefix="false" />
        <embedded name="brief" class="App\TaskManagers\Domain\ValueObject\TaskBrief" use-column-prefix="false" />
        <embedded name="description" class="App\TaskManagers\Domain\ValueObject\TaskDescription" use-column-prefix="false" />
        <field name="startDate" type="taskStartDate" />
        <field name="finishDate" type="taskFinishDate" />
        <field name="status" type="taskStatus" />
        <many-to-one field="owner" target-entity="App\Users\Domain\Entity\User" />
        <many-to-one field="project" target-entity="App\Projects\Domain\Entity\Project" inversed-by="tasks" />
    </entity>
</doctrine-mapping>